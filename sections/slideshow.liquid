        {
          "type": "image",
          "settings": {
            "image": "",
            "title": "Parallax Shopify Theme",
            "subtitle": "",
            "text_position": "center center",
            "button_label": "",
            "link": ""
          }
        },
        {
          "type": "image",
            "settings": {
            "image": "",
